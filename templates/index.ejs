<% include header %>

<div class="container">
    <main>
        <div class="row">
            <div class="col-sm-7">
              <h1>Spjallborð hinna háfleygu hugmynda</h1>
              <hr>
              <section class="entries">
                <% for(var i=0; i < posts.length; i++) { %>
                  <div class="entry">
                    <a class="btn btn-primary pull-right" href="/delete/<%= posts[i].id %>">Eyða</a>
                    <h3 class="name"><%= posts[i].name %></h3>
                    <p class="text"><%= posts[i].text %></p>
                    <div class="replies">
                      <% for(var j=0; j < posts[i].Comments.length; j++) { %>
                        <div class="reply well">
                          <a class="pull-right" href="/delete-comment/<%= posts[i].Comments[j].id %>">x</a>
                          <h4 class="name"><%= posts[i].Comments[j].name %></h4>
                          <p class="text"><%= posts[i].Comments[j].text %></p>
                        </div>
                      <% } %>
                    </div>
                    <form action="/add-comment/" method="post" class="form-inline reply-form">
                      <div class="form-group">
                        <input class="form-control" type="text" name="name" placeholder="Nafn">
                      </div>
                      <div class="form-group">
                        <input class="form-control" type="text" name="text" placeholder="Svar">
                        <input class="form-control" type="hidden" name="postid" value="<%= posts[i].id %>">
                      </div>
                      <button type="submit" class="btn btn-primary">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        Svara
                      </button>
                    </form>
                  </div>
                  <hr>
                <% } %>
              </section>
            </div>

            <div class="col-sm-5">
                <div class="well">
                  <h2>Ný færsla</h2>
                  <form action="/add/" method="post" id="new-entry">
                    <div class="form-group">
                      <label class="" for="new-entry-name">Nafn:</label>
                      <input class="form-control" type="text" name="name" id="new-entry-name">
                    </div>
                    <div class="form-group">
                      <label class="" for="new-entry-text">Texti:</label>
                      <textarea id="new-entry" name="text" class="form-control" rows="10" cols="40"></textarea>
                    </div>
                    <button type="submit" class="pull-left btn btn-primary btn-lg">
                      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                      Skrifa
                    </button>
                  </form>
                </div>
            </div>
        </div>
    </main>
</div>

<% include footer %>
